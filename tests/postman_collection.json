{
  "info": {
    "name": "Hotel Reservation System API",
    "description": "Sample Postman collection for manual API testing.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url",    "value": "http://localhost:3000" },
    { "key": "admin_token", "value": "" },
    { "key": "user_token",  "value": "" }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/health"
      }
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/auth/register",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"testuser\",\"email\":\"test@test.com\",\"password\":\"password123\",\"name\":\"Test User\"}"
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/auth/login",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"testuser\",\"password\":\"password123\"}"
        }
      }
    },
    {
      "name": "Login Admin",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/auth/login",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"admin\",\"password\":\"hrsadmin2024!\"}"
        }
      }
    },
    {
      "name": "List Rooms",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/rooms?sortBy=price_per_night&order=ASC"
      }
    },
    {
      "name": "Check Availability",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/rooms/1/availability?checkIn=2026-04-01&checkOut=2026-04-05"
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/reservations",
        "header": [
          { "key": "Content-Type",  "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"roomTypeId\":1,\"checkIn\":\"2026-05-01\",\"checkOut\":\"2026-05-03\",\"guests\":2}"
        }
      }
    },
    {
      "name": "My Reservations",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/reservations",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ]
      }
    },
    {
      "name": "Admin — List All Reservations",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/admin/reservations",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ]
      }
    },
    {
      "name": "Admin — Confirm Reservation",
      "request": {
        "method": "PATCH",
        "url": "{{base_url}}/api/admin/reservations/1/confirm",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ]
      }
    },
    {
      "name": "Admin — Stats",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/admin/stats",
        "header": [
          { "key": "Authorization", "value": "Bearer {{admin_token}}" }
        ]
      }
    },
    {
      "name": "LLM — Parse Booking Intent",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/llm/parse-booking",
        "header": [
          { "key": "Content-Type",  "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"message\":\"I want a deluxe room for 2 adults from March 10 to March 15 under 200\"}"
        }
      }
    },
    {
      "name": "LLM — Chat",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/llm/chat",
        "header": [
          { "key": "Content-Type",  "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{user_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"message\":\"What rooms do you have?\"}"
        }
      }
    }
  ]
}
